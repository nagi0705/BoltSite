---
import { getLocaleFromPathname, loadTranslation } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const t = await loadTranslation(locale);
---

<section id="contact" class="py-20 bg-gradient-to-br from-blue-600 via-purple-600 to-blue-800 text-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- メインCTA -->
      <div class="mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          {t.cta.title}
        </h2>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          {t.cta.subtitle}
        </p>
        
        <!-- 高速サイト画像とCTA -->
        <div class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12">
          <div class="text-center">
            <div class="w-32 h-32 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4 overflow-hidden">
              <img src="/logowithtxt.png" alt="BoltSite" class="w-full h-full object-cover" />
            </div>
            <h3 class="text-2xl font-bold mb-2">{t.cta.fast_site}</h3>
            <p class="opacity-90">{t.cta.fast_description}</p>
          </div>
          
          <div class="text-center">
            <h3 class="text-3xl font-bold mb-4">{t.cta.start_now}</h3>
            <div class="space-y-4">
              <a href="https://cor-jp.com/contact" target="_blank" class="block bg-white text-blue-600 hover:bg-gray-100 px-8 py-4 rounded-full text-lg font-semibold transition-colors duration-300 shadow-lg">
                {t.cta.free_consultation}
              </a>
            </div>
          </div>
        </div>
        
        <!-- 信頼の証 -->
        <div class="flex flex-wrap justify-center gap-8 text-sm opacity-90">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{t.cta.guarantees.initial_cost}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{t.cta.guarantees.delivery}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{t.cta.guarantees.pagespeed}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{t.cta.guarantees.refund}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

