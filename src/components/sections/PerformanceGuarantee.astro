---
import { loadTranslation, getLocaleFromPathname, getTranslation } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = (key: string) => getTranslation(translations, key);
---

<section id="performance" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- セクションタイトル -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          {t('performance_guarantee.title')}
        </h2>
        <p class="text-xl text-gray-600">
          {t('performance_guarantee.subtitle')}
        </p>
      </div>
      
      <!-- 保証値ボックス -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        
        <!-- LCP保証 -->
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-xl p-6 border-2 border-secondary-200">
          <div class="text-center">
            <div class="w-16 h-16 bg-secondary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">LCP</h3>
            <div class="text-2xl font-bold text-secondary-600 mb-2 min-h-[2.5rem] flex items-center justify-center">
              &lt; 1.0{t('performance_guarantee.lcp_seconds')}
            </div>
            <p class="text-sm text-gray-600 leading-tight">Largest Contentful Paint</p>
          </div>
        </div>
        
        <!-- FID保証 -->
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-xl p-6 border-2 border-primary-200">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">FID</h3>
            <div class="text-2xl font-bold text-primary-600 mb-2 min-h-[2.5rem] flex items-center justify-center">
              &lt; 50{t('performance_guarantee.fid_milliseconds')}
            </div>
            <p class="text-sm text-gray-600 leading-tight">First Input Delay</p>
          </div>
        </div>
        
        <!-- CLS保証 -->
        <div class="bg-gradient-to-br from-accent-50 to-accent-100 rounded-xl p-6 border-2 border-accent-200">
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">CLS</h3>
            <div class="text-2xl font-bold text-accent-600 mb-2 min-h-[2.5rem] flex items-center justify-center">
              &lt; 0.05
            </div>
            <p class="text-sm text-gray-600 leading-tight">Cumulative Layout Shift</p>
          </div>
        </div>
        
        <!-- PageSpeed保証 -->
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-xl p-6 border-2 border-secondary-200">
          <div class="text-center">
            <div class="w-16 h-16 bg-secondary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">PageSpeed</h3>
            <div class="text-2xl font-bold text-secondary-600 mb-2 min-h-[2.5rem] flex items-center justify-center">
              95{t('performance_guarantee.pagespeed_score')}
            </div>
            <p class="text-sm text-gray-600 leading-tight">Overall Score</p>
          </div>
        </div>
      </div>
      
      <!-- Lighthouseスコア表示 -->
      <div class="bg-gray-50 rounded-2xl p-8 mb-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">{t('performance_guarantee.actual_lighthouse_score')}</h3>
        <div class="flex justify-center">
          <div class="bg-white rounded-xl shadow-lg p-6 border-2 border-secondary-200 max-w-md">
            <div class="text-center">
              <div class="text-sm text-gray-600 mb-4">{t('performance_guarantee.lighthouse_score')}</div>
              
              <!-- HTML版Lighthouseスコア -->
              <div class="bg-white rounded-xl border border-green-200 p-6 mb-4">
                <div class="text-center mb-4">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">{t('performance_guarantee.lighthouse_score')}</h4>
                </div>
                
                <!-- スコアバッジ -->
                <div class="grid grid-cols-2 gap-4 mb-4">
                  <div class="text-center">
                    <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-2">
                      <span class="text-white font-bold text-lg">98</span>
                    </div>
                    <div class="text-sm text-gray-700 leading-tight min-h-[2rem] flex items-center justify-center">{t('performance_guarantee.performance')}</div>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-2">
                      <span class="text-white font-bold text-lg">99</span>
                    </div>
                    <div class="text-sm text-gray-700 leading-tight min-h-[2rem] flex items-center justify-center">{t('performance_guarantee.accessibility')}</div>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-2">
                      <span class="text-white font-bold text-lg">100</span>
                    </div>
                    <div class="text-sm text-gray-700 leading-tight min-h-[2rem] flex items-center justify-center">{t('performance_guarantee.best_practices')}</div>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-2">
                      <span class="text-white font-bold text-lg">100</span>
                    </div>
                    <div class="text-sm text-gray-700 leading-tight min-h-[2rem] flex items-center justify-center">{t('performance_guarantee.seo')}</div>
                  </div>
                </div>
              </div>
              
              <div class="text-sm text-gray-500">
                {t('performance_guarantee.actual_measurement_date')}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 速度データグラフ -->
      <div class="grid lg:grid-cols-2 gap-12 mb-12">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{t('performance_guarantee.actual_speed_data')}</h3>
          <div class="space-y-4">
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <h4 class="font-semibold text-gray-900">{t('performance_guarantee.completion_time')}</h4>
                <span class="bg-secondary-100 text-secondary-800 px-3 py-1 rounded-full text-sm font-semibold">72ms</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-secondary-500 h-3 rounded-full" style="width: 7.2%"></div>
              </div>
              <p class="text-sm text-gray-600 mt-2">{t('performance_guarantee.page_load_time')}</p>
            </div>
            
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <h4 class="font-semibold text-gray-900">{t('performance_guarantee.dom_content_loaded')}</h4>
                <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-semibold">38ms</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-primary-500 h-3 rounded-full" style="width: 3.8%"></div>
              </div>
              <p class="text-sm text-gray-600 mt-2">{t('performance_guarantee.dom_build_time')}</p>
            </div>
            
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <h4 class="font-semibold text-gray-900">{t('performance_guarantee.load')}</h4>
                <span class="bg-accent-100 text-accent-800 px-3 py-1 rounded-full text-sm font-semibold">42ms</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-accent-500 h-3 rounded-full" style="width: 4.2%"></div>
              </div>
              <p class="text-sm text-gray-600 mt-2">{t('performance_guarantee.resource_load_time')}</p>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{t('performance_guarantee.guarantee_content')}</h3>
          <div class="space-y-6">
            <div class="bg-secondary-50 border border-secondary-200 rounded-lg p-6">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-secondary-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-secondary-800 mb-2">{t('performance_guarantee.core_web_vitals_guarantee')}</h4>
                  <p class="text-sm text-secondary-700">{t('performance_guarantee.core_web_vitals_desc')}</p>
                </div>
              </div>
            </div>
            
            <div class="bg-primary-50 border border-primary-200 rounded-lg p-6">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-primary-800 mb-2">{t('performance_guarantee.pagespeed_guarantee')}</h4>
                  <p class="text-sm text-primary-700">{t('performance_guarantee.pagespeed_desc')}</p>
                </div>
              </div>
            </div>
            
            <div class="bg-red-50 border border-red-200 rounded-lg p-6">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <h4 class="font-semibold text-red-800 mb-2">{t('performance_guarantee.full_refund_guarantee')}</h4>
                  <p class="text-sm text-red-700">{t('performance_guarantee.full_refund_desc')}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 測定方法 -->
      <div class="bg-gray-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">{t('performance_guarantee.measurement_method')}</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('performance_guarantee.google_pagespeed_insights')}</h4>
            <p class="text-sm text-gray-600">{t('performance_guarantee.google_official_tool')}</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-secondary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('performance_guarantee.core_web_vitals')}</h4>
            <p class="text-sm text-gray-600">{t('performance_guarantee.google_important_metrics')}</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('performance_guarantee.real_device_test')}</h4>
            <p class="text-sm text-gray-600">{t('performance_guarantee.actual_device_verification')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
