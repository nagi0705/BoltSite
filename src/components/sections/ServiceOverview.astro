---
import { getLocaleFromPathname, getTranslation, loadTranslation } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = (key: string) => getTranslation(translations, key);
---

<section id="overview" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- セクションタイトル -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          {t('services.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto" set:html={t('services.subtitle')}>
        </p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- 左側: サービス内容 -->
        <div>
          <!-- 料金情報 -->
          <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-2xl p-8 mb-8">
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600 mb-2">
                <span class="text-4xl">15,000</span>円<span class="text-lg">〜</span>
              </div>
              <div class="text-lg text-gray-700 mb-4">{t('services.pricing_info.monthly')}</div>
              <div class="text-2xl font-bold text-green-600 mb-2">
                {t('services.pricing_info.initial_cost')}<span class="text-3xl">0</span>円
              </div>
              <div class="text-sm text-gray-600">
                {t('services.pricing_info.delivery')}
              </div>
            </div>
          </div>
          
          <!-- サービス特徴 -->
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{t('services.features_list.fast_site.title')}</h3>
                <p class="text-gray-600">{t('services.features_list.fast_site.description')}</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{t('services.features_list.seo_optimized.title')}</h3>
                <p class="text-gray-600">{t('services.features_list.seo_optimized.description')}</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{t('services.features_list.security.title')}</h3>
                <p class="text-gray-600">{t('services.features_list.security.description')}</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 右側: コスト比較グラフ -->
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">
            {t('comparison.cost_comparison')}
          </h3>
          
          <!-- 比較グラフ -->
          <div class="space-y-6">
            <!-- WordPress -->
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex justify-between items-center mb-4">
                <h4 class="text-lg font-semibold text-gray-800">{t('comparison.wordpress')}</h4>
                <span class="text-2xl font-bold text-red-600">{t('comparison.wordpress_cost')}</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-4">
                <div class="bg-red-500 h-4 rounded-full" style="width: 100%"></div>
              </div>
              <div class="text-sm text-gray-600 mt-2">
                {t('comparison.wordpress_description')}
              </div>
            </div>
            
            <!-- BoltSite -->
            <div class="bg-blue-50 rounded-lg p-6 border-2 border-blue-200">
              <div class="flex justify-between items-center mb-4">
                <h4 class="text-lg font-semibold text-blue-800">{t('comparison.boltsite')}</h4>
                <span class="text-2xl font-bold text-blue-600">{t('comparison.boltsite_cost')}</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-4">
                <div class="bg-blue-500 h-4 rounded-full" style="width: 12%"></div>
              </div>
              <div class="text-sm text-blue-600 mt-2 font-semibold">
                {t('comparison.boltsite_description')}
              </div>
            </div>
          </div>
          
          <!-- 実績例 -->
          <div class="mt-8 bg-white rounded-xl shadow-lg p-6 border border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">{t('comparison.case_studies')}</h4>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <div>
                  <div class="font-semibold text-gray-800">
                    <a href="https://nogyodata.com" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 transition-colors duration-300">
                      {t('comparison.nogyodata')}
                    </a>
                  </div>
                  <div class="text-sm text-gray-600">{t('comparison.nogyodata_desc')}</div>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <div>
                  <div class="font-semibold text-gray-800">
                    <a href="https://cor-jp.com" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 transition-colors duration-300">
                      {t('comparison.cor_jp')}
                    </a>
                  </div>
                  <div class="text-sm text-gray-600">{t('comparison.cor_jp_desc')}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 社会的価値 -->
      <div class="mt-16 bg-gradient-to-r from-green-50 to-blue-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
          {t('social_value.title')}
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 5.9c1.16 0 2.1.94 2.1 2.1s-.94 2.1-2.1 2.1S9.9 9.16 9.9 8s.94-2.1 2.1-2.1m0 9c2.97 0 6.1 1.46 6.1 2.1v1.1H5.9V17c0-.64 3.13-2.1 6.1-2.1M12 4C9.79 4 8 5.79 8 8s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 9c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4z"/>
                <path d="M20 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.67 0-5 1.34-5 4v3h10v-3c0-2.66-3.33-4-5-4z"/>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('social_value.digital_gap')}</h4>
            <p class="text-sm text-gray-600">{t('social_value.digital_gap_desc')}</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('social_value.regional_competitiveness')}</h4>
            <p class="text-sm text-gray-600">{t('social_value.regional_competitiveness_desc')}</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('social_value.accessibility')}</h4>
            <p class="text-sm text-gray-600">{t('social_value.accessibility_desc')}</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-red-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">{t('social_value.cybersecurity')}</h4>
            <p class="text-sm text-gray-600">{t('social_value.cybersecurity_desc')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
