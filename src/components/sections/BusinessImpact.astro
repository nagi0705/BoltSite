---
import { loadTranslation, getLocaleFromPathname, getTranslation } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = (key: string) => getTranslation(translations, key);
---

<section id="impact" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- セクションタイトル -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          {t('business_impact.title')}
        </h2>
        <p class="text-xl text-gray-600">
          {t('business_impact.subtitle')}
        </p>
      </div>
      
      <!-- 効果データ表 -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-12">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6">
          <h3 class="text-2xl font-bold text-center">{t('business_impact.optimization_effects')}</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-100">
              <tr>
                <th class="text-left py-4 px-6 font-semibold text-gray-900">{t('business_impact.metrics')}</th>
                <th class="text-center py-4 px-4 font-semibold text-gray-900">{t('business_impact.improvement_effects')}</th>
                <th class="text-center py-4 px-4 font-semibold text-gray-900">{t('business_impact.specific_values')}</th>
                <th class="text-center py-4 px-4 font-semibold text-gray-900">{t('business_impact.business_impact')}</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="py-4 px-6 font-medium text-gray-900">{t('business_impact.conversion_rate')}</td>
                <td class="py-4 px-4 text-center">
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">+15-25%</span>
                </td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.monthly_sales_improvement')}</td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.direct_revenue_increase')}</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="py-4 px-6 font-medium text-gray-900">{t('business_impact.bounce_rate')}</td>
                <td class="py-4 px-4 text-center">
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">-20-30%</span>
                </td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.extended_user_stay')}</td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.engagement_improvement')}</td>
              </tr>
              <tr>
                <td class="py-4 px-6 font-medium text-gray-900">{t('business_impact.seo_ranking')}</td>
                <td class="py-4 px-4 text-center">
                  <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-semibold">{t('business_impact.seo_ranking_improvement_value')}</span>
                </td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.search_ranking_improvement')}</td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.organic_traffic_increase')}</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="py-4 px-6 font-medium text-gray-900">{t('business_impact.customer_satisfaction')}</td>
                <td class="py-4 px-4 text-center">
                  <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm font-semibold">+30%</span>
                </td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.user_experience_improvement')}</td>
                <td class="py-4 px-4 text-center text-gray-700">{t('business_impact.repeat_rate_improvement')}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- 調査データ -->
      <div class="grid lg:grid-cols-2 gap-12 mb-12">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{t('business_impact.industry_research_data')}</h3>
          
          <!-- Amazon調査 -->
          <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-orange-500 mb-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">{t('business_impact.amazon_research')}</h4>
                <p class="text-sm text-gray-600 mb-3">
                  {t('business_impact.amazon_finding')}
                </p>
                <a href="https://www.amazon.science/publications/amazon-finds-100ms-of-latency-costs-1-in-sales" target="_blank" class="text-blue-600 text-sm hover:underline">
                  {t('business_impact.details_here')} →
                </a>
              </div>
            </div>
          </div>
          
          <!-- Google調査 -->
          <div class="bg-white rounded-xl p-6 shadow-sm border-l-4 border-blue-500">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">{t('business_impact.google_research')}</h4>
                <p class="text-sm text-gray-600 mb-3">
                  {t('business_impact.google_finding')}
                </p>
                <a href="https://web.dev/why-speed-matters/" target="_blank" class="text-blue-600 text-sm hover:underline">
                  {t('business_impact.details_here')} →
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{t('business_impact.roi_calculation_example')}</h3>
          
          <div class="bg-white rounded-xl p-6 shadow-sm">
            <h4 class="font-semibold text-gray-900 mb-4">{t('business_impact.company_case')}</h4>
            
            <div class="space-y-4">
              <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                <span class="text-sm text-gray-700">{t('business_impact.current_conversion_rate')}</span>
                <span class="font-semibold text-gray-900">2.0%</span>
              </div>
              
              <div class="flex justify-between items-center p-3 bg-green-50 rounded-lg">
                <span class="text-sm text-gray-700">{t('business_impact.improved_conversion_rate')}</span>
                <span class="font-semibold text-green-600">2.4% (+20%)</span>
              </div>
              
              <div class="flex justify-between items-center p-3 bg-blue-50 rounded-lg">
                <span class="text-sm text-gray-700">{t('business_impact.monthly_sales_increase')}</span>
                <span class="font-semibold text-blue-600">+200万円</span>
              </div>
              
              <div class="flex justify-between items-center p-3 bg-purple-50 rounded-lg">
                <span class="text-sm text-gray-700">{t('business_impact.annual_sales_increase')}</span>
                <span class="font-semibold text-purple-600">+2,400万円</span>
              </div>
              
              <div class="flex justify-between items-center p-3 bg-orange-50 rounded-lg">
                <span class="text-sm text-gray-700">{t('business_impact.boltsite_monthly_fee')}</span>
                <span class="font-semibold text-orange-600">25,000円</span>
              </div>
              
              <div class="border-t pt-4">
                <div class="flex justify-between items-center">
                  <span class="text-lg font-semibold text-gray-900">ROI</span>
                  <span class="text-2xl font-bold text-green-600">8,000%</span>
                </div>
                <p class="text-sm text-gray-600 mt-2">
                  {t('business_impact.roi_description')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 成功事例 -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">{t('business_impact.success_cases')}</h3>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">A</span>
              </div>
              <h4 class="font-semibold text-gray-900">{t('business_impact.it_company')}</h4>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.display_speed')}</span>
                <span class="text-sm font-semibold text-green-600">5秒 → 0.3秒</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.conversion_rate')}</span>
                <span class="text-sm font-semibold text-green-600">+22%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.monthly_sales')}</span>
                <span class="text-sm font-semibold text-green-600">+180万円</span>
              </div>
            </div>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">B</span>
              </div>
              <h4 class="font-semibold text-gray-900">{t('business_impact.consulting_company')}</h4>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.display_speed')}</span>
                <span class="text-sm font-semibold text-green-600">8秒 → 0.3秒</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.bounce_rate')}</span>
                <span class="text-sm font-semibold text-green-600">-28%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">{t('business_impact.inquiry_count')}</span>
                <span class="text-sm font-semibold text-green-600">+35%</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
