---
import { getLocaleFromPathname, getTranslation, loadTranslation } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = (key: string) => getTranslation(translations, key);
---

<section id="competitive" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- セクションタイトル -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          {t('competitive.title')}
        </h2>
        <p class="text-xl text-gray-600">
          {t('competitive.subtitle')}
        </p>
      </div>
      
      <!-- 技術比較表 -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-12">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
