---
import { loadTranslation, getLocaleFromPathname } from '../../utils/i18n';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const t = await loadTranslation(locale);
---

<section class="relative min-h-screen bg-gradient-to-br from-white via-blue-50 to-beige-100 flex items-center justify-center overflow-hidden">
  <!-- 背景装飾 -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23e0f2fe" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
  
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- 左側: メインコンテンツ -->
        <div class="text-center lg:text-left">
          <!-- スローガン -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            {t.hero.title}
          </h1>
          
          <!-- サブタイトル -->
          <p class="text-xl text-gray-600 mb-8 leading-relaxed" set:html={t.hero.description}>
          </p>
          
          <!-- CTAボタン -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#contact" class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              {t.hero.cta_primary}
            </a>
            <a href="#pricing" class="border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300">
              {t.hero.cta_secondary}
            </a>
          </div>
          
          <!-- 信頼の証 -->
          <div class="mt-8 flex flex-wrap justify-center lg:justify-start gap-6 text-sm text-gray-500">
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
              <span>{t.cta.guarantees.initial_cost}</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
              <span>{t.cta.guarantees.delivery}</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
              <span>{t.cta.guarantees.pagespeed}</span>
            </div>
          </div>
        </div>
        
        <!-- 右側: ビジュアル要素 -->
        <div class="relative">
          <!-- 速度測定アニメーション -->
          <div class="relative bg-white rounded-2xl shadow-2xl p-8 mb-6">
            <div class="text-center">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">サイト表示速度</h3>
              <div class="relative w-48 h-48 mx-auto mb-4">
                <!-- 速度計のアニメーション -->
                <div class="absolute inset-0 rounded-full border-8 border-gray-200"></div>
                <div class="absolute inset-0 rounded-full border-8 border-primary-500 border-t-transparent animate-spin" style="animation-duration: 0.3s;"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center">
                    <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-2 shadow-lg">
                      <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
                      </svg>
                    </div>
                    <div class="text-3xl font-bold text-primary-600">0.3s</div>
                    <div class="text-sm text-gray-600">爆速表示</div>
                  </div>
                </div>
              </div>
              <div class="text-sm text-gray-600">
                <div>DOMContentLoaded: <span class="font-semibold text-secondary-600">38ms</span></div>
                <div>Load: <span class="font-semibold text-secondary-600">42ms</span></div>
              </div>
            </div>
          </div>
          
          <!-- Lighthouseスコア -->
          <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-lg p-4 border-2 border-secondary-200">
            <div class="text-center">
              <div class="text-xs text-gray-600 mb-2">Lighthouse Score</div>
              <div class="grid grid-cols-2 gap-2 text-xs">
                <div class="text-center">
                  <div class="font-bold text-secondary-600">98</div>
                  <div class="text-gray-500">Performance</div>
                </div>
                <div class="text-center">
                  <div class="font-bold text-secondary-600">99</div>
                  <div class="text-gray-500">Accessibility</div>
                </div>
                <div class="text-center">
                  <div class="font-bold text-secondary-600">100</div>
                  <div class="text-gray-500">Best Practices</div>
                </div>
                <div class="text-center">
                  <div class="font-bold text-secondary-600">100</div>
                  <div class="text-gray-500">SEO</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 速度データバッジ -->
          <div class="absolute -bottom-4 -left-4 bg-secondary-500 text-white px-4 py-2 rounded-full shadow-lg">
            <div class="text-sm font-bold">爆速: 72ms</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- スクロールインジケーター -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  .beige-100 {
    background-color: #fef7ed;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .animate-spin {
    animation: spin 0.3s linear infinite;
  }
</style>
