---
import { getLocaleFromPathname, getTranslation, loadTranslation } from '../../utils/i18n';
import Card from '../ui/Card.astro';
import SectionTitle from '../ui/SectionTitle.astro';

const { currentPath } = Astro.props;
const locale = getLocaleFromPathname(currentPath || Astro.url.pathname);
const translations = await loadTranslation(locale);
const t = (key: string) => getTranslation(translations, key);
---

<section id="pricing" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- セクションタイトル -->
      <SectionTitle
        title={t('pricing.title')}
        description={t('pricing.subtitle')}
      />
      
      <!-- 成果保証バッジ -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-500 to-green-500 text-white px-8 py-4 rounded-full shadow-lg">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <div>
            <h3 class="text-xl font-bold">{t('pricing.guarantee.title')}</h3>
            <p class="text-sm opacity-90">{t('pricing.guarantee.subtitle')}</p>
          </div>
        </div>
      </div>
      
      <!-- プラン比較カード -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        
        <!-- ビギナープラン -->
        <Card
          title={t('pricing.basic.name')}
          description={t('pricing.basic.description')}
          price={15000}
          features={t('pricing.basic.features')}
        />
        
        <!-- スタンダードプラン -->
        <Card
          title={t('pricing.standard.name')}
          description={t('pricing.standard.description')}
          price={25000}
          features={t('pricing.standard.features')}
        />
        
        <!-- プレミアムプラン -->
        <Card
          title={t('pricing.premium.name')}
          description={t('pricing.premium.description')}
          price={30000}
          features={t('pricing.premium.features')}
        />
        
        <!-- エンタープライズプラン -->
        <Card
          title={t('pricing.enterprise.name')}
          description={t('pricing.enterprise.description')}
          price={50000}
          features={t('pricing.enterprise.features')}
        />
      </div>
      
      <!-- 解約ポリシー -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
        <div class="flex items-center justify-center gap-2 mb-2">
          <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm font-semibold text-yellow-800">{t('policies.cancellation_policy')}</span>
        </div>
        <p class="text-sm text-yellow-700" set:html={t('policies.cancellation_text')}>
        </p>
      </div>
      
    </div>
  </div>
</section>
