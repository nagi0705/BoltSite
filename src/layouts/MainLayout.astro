---
import Footer from "../components/ui/Footer.astro";
import Navbar from "../components/ui/Navbar.astro";
import MainHead from "./MainHead.astro";
import { getLocaleFromPathname } from "../utils/i18n";
import "../styles/global.css";

const { ...props } = Astro.props;
const locale = getLocaleFromPathname(Astro.url.pathname);
---

<html lang={locale}>
  <MainHead {...props} />
  <style>
    html.lenis {
      height: auto;
    }
    .lenis.lenis-smooth {
      scroll-behavior: auto;
    }
    .lenis.lenis-smooth [data-lenis-prevent] {
      overscroll-behavior: contain;
    }
    .lenis.lenis-stopped {
      overflow: hidden;
    }
  </style>
  <script src="../utils/lenis"></script>
  <script>
    // パフォーマンス最適化の初期化
    import { initPerformanceOptimizations } from '../utils/performance';
    initPerformanceOptimizations();
  </script>
  <body class="bg-white font-grotesk">
    <main>
      <Navbar currentPath={Astro.url.pathname} />
      <slot />
      <Footer currentPath={Astro.url.pathname} />
    </main>
  </body>
</html>
